<div class="container">
    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

    <div class="mb-3">
        {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.walkDate, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.walkDate, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        <label class="form-label">Seleccionar im√°genes:</label>
        <input type="file" class="form-control" id="images" name="images[]" multiple accept="image/*">
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-success">{{ button_label|default('Guardar') }}</button>
        <a class="btn btn-secondary" href="{{ path('app_walk_index') }}">Volver a la lista</a>
    </div>

    {{ form_end(form) }}
</div>
