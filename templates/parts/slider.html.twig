<div class="slider">
    <div class="list">
        {% for route in routes %}
            <div class="item">
                <img src="./image/img1.jpg" alt="">

                <div class="content">
                    <div class="title">{{ route.title }}</div>
                    <div class="type">{{ route.date }}</div>
                    <div class="description">
                        {{ route.description }}
                    </div>
                    <div class="button">
                        <button>SEE MORE</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


    <div class="thumbnail">
        {% for route in routes %}
            <div class="item">
                <img src="./image/img1.jpg" alt="">
            </div>
        {% endfor %}
    </div>


    <div class="nextPrevArrows">
        <button class="prev"> < </button>
        <button class="next"> > </button>
    </div>


</div>